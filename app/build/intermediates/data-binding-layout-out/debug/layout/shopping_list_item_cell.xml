<?xml version="1.0" encoding="utf-8"?>

                                                   

    
                                                                                                    
           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/shopping_list_item_height"
        android:background="@drawable/white_ripple" android:tag="layout/shopping_list_item_cell_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical|start"
                android:layout_marginStart="@dimen/reg_margin">

                <CheckBox
                    android:id="@+id/shopping_list_item_check_box"
                    layout="@layout/shopping_list_check_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="binding_1"            />

                <TextView
                    android:id="@+id/shopping_list_item_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/large_margin"
                    android:textSize="@dimen/shoppint_list_item_text_size"
                    tools:text="Bananas"
                    android:tag="binding_2"     />

            </LinearLayout>

            <ImageView
                android:id="@+id/shopping_list_item_delete_button"
                android:layout_width="@dimen/shopping_list_item_height"
                android:layout_height="@dimen/shopping_list_item_height"
                android:scaleType="center"
                android:src="@drawable/ic_delete_black_24dp"
                android:layout_marginEnd="@dimen/reg_margin"
                android:layout_alignParentEnd="true"
                android:tint="@color/black"/>

    </RelativeLayout>

         