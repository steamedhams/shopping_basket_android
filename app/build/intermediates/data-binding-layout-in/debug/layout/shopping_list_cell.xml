<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="shoppinglist" type="com.steamedhams.theshoppingbasket.data.model.ShoppingList"/>
    </data>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/shopping_list_item_height"
        android:gravity="center_vertical"
        android:background="@drawable/white_ripple">

        <View
            android:layout_width="@dimen/list_avatar_size"
            android:layout_height="@dimen/list_avatar_size"
            android:layout_marginStart="@dimen/reg_margin"
            android:layout_marginEnd="@dimen/reg_margin"
            android:background="@drawable/list_avatar_background"/>

        <TextView
            android:id="@+id/shopping_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/reg_margin"
            android:layout_marginEnd="@dimen/reg_margin"
            android:text="@{shoppinglist.title}"
            tools:text="My shopping list"/>

    </LinearLayout>

</layout>