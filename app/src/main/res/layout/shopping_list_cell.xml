<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/white_ripple"
    android:gravity="center_vertical"
    android:layout_height="@dimen/shopping_list_item_height"
    android:layout_width="match_parent">

    <View
        android:background="@drawable/list_avatar_background"
        android:layout_height="@dimen/list_avatar_size"
        android:layout_marginEnd="@dimen/reg_margin"
        android:layout_marginStart="@dimen/reg_margin"
        android:layout_width="@dimen/list_avatar_size"/>

    <TextView
        android:id="@+id/shopping_list_name"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/reg_margin"
        android:layout_marginStart="@dimen/reg_margin"
        android:layout_width="wrap_content"
        tools:text="My shopping list"/>

</LinearLayout>